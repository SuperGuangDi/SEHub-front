/*
  索引页的样式
*/

@import '../default'

// index.vue

$headBarHeight = 50px     // 定义HeadBar的高度
$sideBarWidth = 250px     // 定义SideBar的宽度

.index-container {
  width: 100%;
  height: 100%;

  .head-box {
    width: 100%;
    height: $headBarHeight;
  }

  .main-box {
    .left-box {
      position: fixed;
      top: $headBarHeight;
      bottom: 0;
      // width: $sideBarWidth;
    }

    .right-box {
      position: fixed;
      top: $headBarHeight;
      left: $sideBarWidth;
      right: 0;
      bottom: 0;
      overflow-y: scroll;

      .index-right-box{  // 设置默认的内容边框样式
        width 1100px;
        padding-left 48px;
        padding-right 48px;
        margin 30px auto;
      }
    }
  }
}

.fade-enter-active, .fade-leave-active {
  transition: opacity 0.1s linear;
}

.fade-enter, .fade-leave-to {
  opacity: 0;
}













