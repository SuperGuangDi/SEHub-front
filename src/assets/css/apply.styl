apy_form_width = 550px
apy_matter_width = 280px


.apy-container
  width apy_form_width + apy_matter_width + 160px
  margin 10px auto
  .el-container
  .el-main
    margin 0
    padding 0


.apy-form-container
  width apy_form_width
  padding 40px 42px 40px 10px
  //margin 10px auto
  border 0.5px solid #aaaaaa
  border-radius 20px

// 注意事项的样式
.apy-matter-container
  width apy_matter_width
  padding 30px 15px 20px 20px
  border 0.5px solid #ccc
  border-radius 20px
  color: #909399
  font-family: "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif;
  .apy-matter-title
    font-size 20px
    color #606266
    padding-bottom 6px
  .apy-matter-each
    margin-bottom 6px

.apy-form-dashed
  width: 100%
  height 1px
  border-top dashed 1px #aaa
  margin-left 15px
  margin-bottom 20px

.apy-text-normal
  width 450px

.apy-input-normal
  width 360px

.apy-input-mini
  width 150px

.apy-tip
  font-size 18px
  color #999

.apy-upload-box
  width 180px
  border 1px dashed #ccc
  border-radius: 5px
  text-align: center
  font-size: 20px
  color #ccc
  &:hover
    color red
    border-color red

/* Button 相关 */
apy_btn_width = 100px
btn_interval = 50px
btn_box_width = 2*apy_btn_width + btn_interval
btn_box_margin = (apy_form_width - btn_box_width)/2+22px


.apy-btn-box
  width btn_box_width
  margin-top 40px
  margin-left btn_box_margin


.apy-btn-after
.apy-btn
  width apy_btn_width

.apy-btn-after
  margin-left btn_interval


.apy-pub-input-mini
  width 80px

.apy-pub-form-btn
  margin-left 220px

