
@import '../../assets/css/default';
@import '../../assets/css/iconfont.css';

.option-box {
  $h = 35px;
  height: $h;
  width: 900px;
  display: flex;
  justify-content: space-between;
  border-box();

  .option-each {
    height: $h;
    width: (900 / 4)px;
    line-height: $h;
    text-align: center;
    border-right: 1px solid #ccc;
    cursor: pointer;
    color: #909399
    not-select();

    &:hover {
      hover-box();
    }

    &:first-child {
      border-top-left-radius: 10px;
      border-bottom-left-radius: 10px;
    }

    &:last-child {
      border-right: none;
      border-top-right-radius: 10px;
      border-bottom-right-radius: 10px;
    }
  }

  .option-active{
    color: $color_theme
    font-weight: bold
  }
}


.home-box{
  width 900px
  height 500px
  margin-top 20px
  border-box()
}
