@import '../../assets/css/default';

.notice-container
  width 900px
  // border-box()
  // box-shadow: inset 0 -10px 0 0 rgba(100,121,143,0.122);

.notice-box-wait
  border-box()
  padding-bottom 30px
  .notice--wait-title
    font-size: 1.375rem
    padding 20px 36px 15px
    border-bottom: 1px solid $color_border


  .notice--wait-content
    not-select()
    cursor pointer
    .notice--wait-each
      padding 15px 36px 15px 36px
      display flex
      justify-content: space-between
      border-bottom 1px solid $color_border
      line-height 20px
      overflow hidden

      &:hover
        hover-box()
      
      .notice---from
        width: 180px
        font-size: 1rem
        font-weight: bold
        color #616266

      .notice---title
        width: 300px
        font-size: 1.125rem
        color $color_black
      
      .notice---state
        width: 45px
        background-color $color_submit
        border-radius(10px)
        text-align: center
        line-height 20px
        height 20px
        font-size: 0.75rem
        color #fff
      
      .notice---time
        font-size: 0.875rem
        color #909399
