@import "../../assets/css/default"

// 以固定宽为900px设计
$widow_width = 900px

apy_form_width = 540px
apy_matter_width = 280px


.apply-box
  width $widow_width
  display flex
  flex-wrap: wrap
  margin-left 60px
  justify-content: space-between
  
  each-box()
    width 260px
    border-box()
    text-align: center
    font-size 1.1em
    margin-bottom 35px
    padding-top 25px
    padding-bottom 15px
    color #606266

  .each-box,
  .each-box-ph
    each-box()
    .each-img
      width 60px
      height 60px
      margin 0 auto
      overflow hidden
      line-height 60px
      font-size 2em
      padding 10px
      border-radius(50%)
      background: #909399;
      color #ffffff
      text-shadow:4px 2px 10px #303333;

    .each-title
      margin-top 10px
      line-height 40px
      transition-duration: 200ms

  .each-box:hover
    hover-box()
    .each-img
      font-size: 1.6em
      transition-property: font-size, background-color;
      transition-duration: 200ms
      background: #409EFF
    .each-title
      font-size 1.4em
      color #409EFF
      transition-property: font-size,color;
      transition-duration: 200ms
      
     
  .each-box-ph
    .each-img
      background: #C0C4CC;
    .each-title
      line-height 36px
      font-size 1.2em




.apy-container
  width $widow_width + 20px
  margin-top 24px
  margin-left 60px

.apy-form-container
  float left
  width apy_form_width
  padding 30px 10px 40px 10px
  border-box()
  margin-right 30px
  margin-bottom 75px

// 注意事项的样式
.apy-matter-container
  float left
  width apy_matter_width

.apy-form-dashed
  width: 95%
  height 1px
  border-top dashed 1px #ddd
  margin 5px auto
  margin-bottom 24px

.apy-text-normal
  width 445px

.apy-input-normal
  width 360px

.apy-input-medium
  width 240px

.apy-input-mini
  width 150px

.apy-tip
  font-size 18px
  color #999

.apy-upload-box
  width 180px
  border 1px dashed #ccc
  border-radius: 5px
  text-align: center
  font-size: 20px
  color #ccc
  &:hover
    color red
    border-color red


.apy-pub-input-mini
  width 80px

.apy-pub-form-btn
  margin-left 200px




/* Button 相关 */
apy_btn_width = 150px
btn_box_margin = (apy_form_width - apy_btn_width)/2


.apy-btn-box
  margin-top 40px
  margin-left btn_box_margin
  .apy-btn-submit
    border-color: $color_default
    width apy_btn_width
    color $color_theme

